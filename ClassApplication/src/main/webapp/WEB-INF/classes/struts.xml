<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
   "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
   "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
<constant name="struts.devMode" value="true" />
<constant name="struts.action.excludePattern" value="LoadConfig"/>
<constant name="struts.action.excludePattern" value="/admajxsrvlt*"/>
    
   <package name="classapp" extends="struts-default">
     <result-types>
         <result-type name="tiles" 
         class="org.apache.struts2.views.tiles.TilesResult" />
      </result-types>
      <action name="login" 
            class="com.signon.LoginUser" 
            method="execute"
            >
            <result name="success" type="tiles">admin.loginsuccess</result>
            <result name="success_classowner" type="tiles">classowner.loginsuccess</result>
            <result name="success_classteacher" type="tiles">classteacher.loginsuccess</result>
            <result name="success_student" type="tiles">student.loginsuccess</result>
            <result name="unaccepted" type="tiles">unaccepted</result>
            <result name="accessblocked" type="tiles">accessblocked</result>
            <result name="error"  type="tiles">login</result>
            <result name="input" type="tiles">login</result>
      </action>

      <action name="logout" 
            class="com.signon.Logout" 
            method="execute">
            <result name="success" type="tiles">login</result>
      </action>
      
      <action name="register" 
            class="com.register.RegisterAction" 
            method="execute">
            <result name="success" type="tiles">register</result>
      </action>
      
      <action name="registeruser" 
            class="com.register.RegisterUserAction" 
            method="execute">
            <result name="success" type="tiles">registersuccess</result>
            <result name="error" type="tiles">register</result>
      </action>
	  <action name="edit" 
            class="com.edit.EditUserAction" 
            method="execute">
            <result name="success" type="tiles">edituser</result>
            <result name="error" type="tiles">register</result>
      </action>
	  <action name="editconfirm" 
            class="com.edit.EditUserConfirm" 
            method="execute">
            <result name="success" type="tiles">edituserreview</result>
            <result name="error" type="tiles">register</result>
      </action>
      <action name="editsave" 
            class="com.edit.EditUserSave" 
            method="execute">
            <result name="success" type="tiles">editusersuccess</result>
            <result name="error" type="tiles">register</result>
      </action>

      <action name="deleteuser" 
            class="com.classuser.DeleteUserAction" 
            method="execute">
            <result name="success" type="tiles">login</result>
            
      </action>
      
	  <action name="searchclass" 
            class="com.classuser.ClassSearchAction" 
            method="execute">
            <result name="success" type="tiles">admin.loginsuccess</result>
            <result name="error" type="tiles">register</result>
      </action>	 	

	  <action name="addsubject" 
            class="com.classowner.AddSubjectAction" 
            method="execute">
            <result name="success" type="tiles">classowner.addsubject</result>
            <result name="error" type="tiles">register</result>
      </action>	 	
	  
	  </package>
</struts>